<h2> Add a new Highlight to the Vacation Plan - <i><%= @vacation_plan.name %></i> </h2>

<%= render partial: '/errors', locals: { record: @highlight} %>

<%= form_for @highlight do |f|%>
    <div><%=f.collection_select :attraction_id, Attraction.all, :id, :name, prompt: true%></div>
    <%= f.label :Day_Number %>
    <div><%= f.number_field :day_number %></div>
     <%= f.label :Notes %>
   <div> <%= f.text_area :daily_notes %></div>
    <%= f.hidden_field :vacation_plan_id, value: @vacation_plan.id%>
    <%=f.submit%>

<% end %>